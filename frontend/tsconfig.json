{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["ES6", "ESNext", "DOM"],
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "components/": ["./src/components/"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/"]
}
